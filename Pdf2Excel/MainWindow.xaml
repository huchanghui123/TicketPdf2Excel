<Window x:Class="Pdf2Excel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pdf2Excel"
        mc:Ignorable="d"
        Title="PDF2EXCEL" Height="200" Width="450">
    <Grid>
        <Button x:Name="btn" Content="点击选择文件" HorizontalAlignment="Center" Width="100" Height="40" Click="OpenFileClick" Margin="0,105,0,0" />
        <Border BorderBrush="Green" BorderThickness="2">
            <TextBlock x:Name="text_file_name" AllowDrop="True"  HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" TextWrapping="Wrap" Text="拖动PDF到此打开" 
                   Height="95" Width="438" TextAlignment="Center" Drop="OnDrop" DragEnter="OnDragEnter" FontWeight="Bold" FontSize="20" FontStyle="Italic"/>
        </Border>
    </Grid>
</Window>
